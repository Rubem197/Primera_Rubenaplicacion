<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu principal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.094" />

    <Button
        android:id="@+id/btnCalculadora"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif"
        android:text="Calculadora"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnColorTexto"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif"
        android:text="Colores"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCalculadora" />

    <Button
        android:id="@+id/btnCambiarTexto"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="CambiarTexto"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTamañoTexto" />

    <Button
        android:id="@+id/btnImagen"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif"
        android:text="Imagen"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGaleria" />

    <Button
        android:id="@+id/btnGaleria"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif"
        android:text="Galeria"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnColorTexto" />

    <Button
        android:id="@+id/btnTamañoTexto"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="TamañoTexto"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAlinear" />

    <Button
        android:id="@+id/btnAlinear"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="175dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="AlinearTexto"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnImagen" />

</androidx.constraintlayout.widget.ConstraintLayout>