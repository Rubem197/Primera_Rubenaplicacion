<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CambiarTexto">

    <Button
        android:id="@+id/btnSalir7"
        style="@style/Widget.Material3.Button"
        android:layout_width="82dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#71E8D0"
        android:text="Volver"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCambia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:minHeight="48dp"
        android:text="Texto que cambiara sus atributos"
        android:textColor="#5BCCB5"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cbNegrita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginBottom="12dp"
        android:text="Negrita"
        android:onClick="textoNegrita"
        app:layout_constraintBottom_toTopOf="@+id/cbGigante"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/cbGigante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginBottom="12dp"
        android:text="Gigante"
        android:onClick="textoGigante"
        app:layout_constraintBottom_toTopOf="@+id/cbEnano"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/cbEnano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginBottom="12dp"
        android:text="Enano"
        android:onClick="textoEnano"
        app:layout_constraintBottom_toTopOf="@+id/cbRojo"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/cbRojo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginBottom="32dp"
        android:text="Rojo"
        android:onClick="textoRojo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>