<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PulsarImagen">

    <Button
        android:id="@+id/btnSalir7"
        style="@style/Widget.Material3.Button"
        android:layout_width="82dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#71E8D0"
        android:text="Volver"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgBoton1"
        android:layout_width="167dp"
        android:layout_height="160dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="120dp"
        android:contentDescription="@string/app_name"
        android:onClick="anteriorImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/power_button__1_"
        tools:ignore="DuplicateClickableBoundsCheck,DuplicateSpeakableTextCheck" />

    <ImageButton
        android:id="@+id/imgBoton2"
        android:layout_width="167dp"
        android:layout_height="160dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="120dp"
        android:contentDescription="@string/app_name"
        android:onClick="siguienteImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/power_button" />
</androidx.constraintlayout.widget.ConstraintLayout>